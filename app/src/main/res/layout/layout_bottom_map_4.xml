<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_bottom_sheet">
        <TextView
            android:id="@+id/tvTitle"
            android:textColor="#1B1E28"
            android:fontFamily="@font/inter_bold"
            android:textSize="20sp"
            android:text="Booking No: 123123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"/>

        <TextView
            android:id="@+id/tvNameService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/inter_bold"
            android:text="Tên dịch vụ"
            android:textColor="#1B1E28"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            />

        <TextView
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_bg_social"
            android:fontFamily="@font/inter_regular"
            android:gravity="start"
            android:text="Sửa chữa tủ lạnh"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#494F58"
            android:textColorHint="#494F58"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvNameService" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_bold"
            android:text="Giá"
            android:textColor="#1B1E28"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/edt_name"
            />
        <EditText
            android:id="@+id/edt_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_bg_social"
            android:fontFamily="@font/inter_regular"
            android:gravity="start"
            android:hint="Nhập giá"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#494F58"
            android:textColorHint="#494F58"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvPrice" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_bold"
            android:text="Công việc thực hiện"
            android:textColor="#1B1E28"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/edt_price"
            />
        <EditText
            android:id="@+id/edt_content"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_bg_social"
            android:fontFamily="@font/inter_regular"
            android:gravity="start"
            android:hint="Công việc thực hiện"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#494F58"
            android:textColorHint="#494F58"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvContent" />

        <TextView
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="23dp"
            android:background="@drawable/custom_bg_cecece"
            android:clickable="false"
            android:enabled="false"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:paddingVertical="14dp"
            android:text="Gửi khách hàng"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/edt_content"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
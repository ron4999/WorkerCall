<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <TextView
            android:id="@+id/tv_title"
            android:text="Mã xác nhận"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_bold"
            android:textSize="20sp"
            android:textColor="#1B1E28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_back"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvText"
            android:text="Nhập mã gồm 4 chữ số được gửi tới:"
            android:fontFamily="@font/inter_regular"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tvPhone"
            android:text="0392728164"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ivCode"
            android:src="@drawable/img_confirm_code_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@id/tvPhone"/>
        <TextView
            android:id="@+id/tvSendCodeAgain"
            android:text="Gửi lại mã xác nhận"
            android:textSize="14sp"
            android:fontFamily="@font/inter_medium"
            android:textColor="#FFA92E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@id/ivCode"
            app:layout_constraintTop_toBottomOf="@id/ivCode"/>

        <TextView
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="23dp"
            android:background="@drawable/custom_bg_cecece"
            android:clickable="false"
            android:enabled="false"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:paddingVertical="14dp"
            android:text="Tiếp tục"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSendCodeAgain"/>

        <TextView
            android:id="@+id/tvDes"
            android:text="@string/wait_57s"
            android:textColor="#7D848D"
            android:textSize="14sp"
            android:fontFamily="@font/inter_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnContinue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
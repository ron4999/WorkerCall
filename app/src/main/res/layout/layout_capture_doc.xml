<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ivDoc1"
            android:src="@drawable/ic_doc_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"/>
        <ImageView
            android:id="@+id/ivDocCmt"
            android:visibility="gone"
            android:src="@drawable/ic_cmt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/ivDoc1"
            app:layout_constraintBottom_toBottomOf="@id/ivDoc1"
            app:layout_constraintStart_toStartOf="@id/ivDoc1"
            app:layout_constraintEnd_toEndOf="@id/ivDoc1"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/ivDoc2"
            android:src="@drawable/ic_doc_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivDoc1"
            android:layout_marginTop="50dp"/>
        <ImageView
            android:id="@+id/ivDocCmt2"
            android:visibility="gone"
            android:src="@drawable/ic_cmt_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/ivDoc2"
            app:layout_constraintBottom_toBottomOf="@id/ivDoc2"
            app:layout_constraintStart_toStartOf="@id/ivDoc2"
            app:layout_constraintEnd_toEndOf="@id/ivDoc2"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tvTitle"
            android:textColor="#7D848D"
            android:fontFamily="@font/inter_regular"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:text="Lựa chọn loại giấy tờ sử dụng:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivDoc2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imgDoc"
            android:src="@drawable/img_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:layout_marginTop="28dp"/>

        <TextView
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/custom_bg_ffa92e_round_16"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:paddingVertical="18dp"
            android:text="Tiếp tục"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
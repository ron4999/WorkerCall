<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:text="Đánh giá"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#1B1E28"
            android:fontFamily="@font/inter_bold"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_back"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_right_time"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"
            android:textColor="#494F58"
            android:text="Đúng giờ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_star_1"
            android:src="@drawable/ic_star_rate"
            app:layout_constraintTop_toBottomOf="@id/tv_right_time"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_professional"
            app:layout_constraintTop_toBottomOf="@id/iv_star_1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"
            android:textColor="#494F58"
            android:text="Chuyên nghiệp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_star_2"
            android:src="@drawable/ic_star_rate"
            app:layout_constraintTop_toBottomOf="@id/tv_professional"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_quality"
            app:layout_constraintTop_toBottomOf="@id/iv_star_2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"
            android:textColor="#494F58"
            android:text="Chất lượng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_star_3"
            android:src="@drawable/ic_star_rate"
            app:layout_constraintTop_toBottomOf="@id/tv_quality"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_title_detail_rate"
            app:layout_constraintTop_toBottomOf="@id/iv_star_3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"
            android:textColor="#494F58"
            android:text="Đánh giá chi tiết"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_content_detail_rate"
            app:layout_constraintTop_toBottomOf="@id/tv_title_detail_rate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/inter_regular"
            android:textSize="16sp"
            android:textColor="#494F58"
            android:text="Làm việc cẩn thận, đến đúng giờ, giá thì quá tốt rồi."
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:text="Cá nhân"
            android:fontFamily="@font/inter_bold"
            android:textSize="20sp"
            android:textColor="#1B1E28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <ImageView
            android:id="@+id/iv_avatar"
            android:src="@drawable/img_ava_personal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginTop="42dp"
            android:layout_width="96dp"
            android:layout_height="96dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:text="Nguyễn Vân Anh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_avatar"
            android:fontFamily="@font/inter_medium"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            android:textColor="#1B1E28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_phone_number"
            android:text="0962120481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/inter_regular"
            android:textSize="14sp"
            android:textColor="#7D848D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_menu"
            app:layout_constraintTop_toBottomOf="@id/tv_phone_number"
            android:layout_marginTop="38dp"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="16dp"
            android:background="@drawable/custom_bg_white"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_personal_info"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Thông tin cá nhân"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#1B1E28"
                    android:paddingTop="26dp"
                    android:drawableStart="@drawable/ic_personal_info"
                    android:drawableEnd="@drawable/ic_next"
                    android:drawablePadding="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@id/view_horizontal_1"
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/view_horizontal_1"
                    app:layout_constraintTop_toBottomOf="@id/tv_personal_info"
                    android:background="#F7F7F9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/tv_favorite_worker"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_1"
                    android:text="Thợ yêu thích"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#1B1E28"
                    android:paddingTop="24dp"
                    android:drawableStart="@drawable/ic_yellow_favorite"
                    android:drawableEnd="@drawable/ic_next"
                    android:drawablePadding="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@id/view_horizontal_2"
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/view_horizontal_2"
                    app:layout_constraintTop_toBottomOf="@id/tv_favorite_worker"
                    android:background="#F7F7F9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/tv_payment"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_2"
                    android:text="Thanh toán"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#1B1E28"
                    android:paddingTop="24dp"
                    android:drawableStart="@drawable/ic_payment"
                    android:drawableEnd="@drawable/ic_next"
                    android:drawablePadding="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@id/view_horizontal_3"
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/view_horizontal_3"
                    app:layout_constraintTop_toBottomOf="@id/tv_payment"
                    android:background="#F7F7F9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/tv_account_setting"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_3"
                    android:text="Thiết lập tài khoản"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#1B1E28"
                    android:paddingTop="24dp"
                    android:drawableStart="@drawable/ic_setting"
                    android:drawableEnd="@drawable/ic_next"
                    android:drawablePadding="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@id/view_horizontal_4"
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/view_horizontal_4"
                    app:layout_constraintTop_toBottomOf="@id/tv_account_setting"
                    android:background="#F7F7F9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/tv_policy"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_4"
                    android:text="Điều khoản"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#1B1E28"
                    android:paddingTop="24dp"
                    android:drawableStart="@drawable/ic_policy"
                    android:drawableEnd="@drawable/ic_next"
                    android:drawablePadding="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingBottom="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <include
            android:id="@+id/view_bottom_navigation"
            layout="@layout/layout_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_bottom_sheet">

        <TextView
            android:id="@+id/tvTitle"
            android:textColor="#494F58"
            android:textSize="20sp"
            android:fontFamily="@font/inter_medium"
            android:text="Bạn đến nơi rồi!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tvDes"
            android:textSize="16sp"
            android:textColor="#FFA92E"
            android:fontFamily="@font/inter_regular"
            android:text="Bắt đầu công việc ngay thôi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:layout_marginTop="4dp" />

        <ImageView
            android:id="@+id/ivPhone"
            android:src="@drawable/ic_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvDes"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="30dp"/>
        <ImageView
            android:id="@+id/ivMess"
            android:src="@drawable/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/ivPhone"
            app:layout_constraintTop_toTopOf="@id/ivPhone"
            app:layout_constraintBottom_toBottomOf="@id/ivPhone"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bắt đầu"
            android:paddingHorizontal="60dp"
            android:paddingVertical="14dp"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/custom_bg_ffa92e_round_16"
            app:layout_constraintStart_toEndOf="@id/ivMess"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivPhone"
            app:layout_constraintBottom_toBottomOf="@id/ivPhone"
            android:layout_margin="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
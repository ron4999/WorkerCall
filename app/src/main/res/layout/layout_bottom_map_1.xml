<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet">

        <ImageView
            android:id="@+id/ivImg"
            android:src="@drawable/img_ava_personal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"/>
        <TextView
            android:id="@+id/tvName"
            android:text="Đỗ Phương"
            android:padding="5dp"
            android:textColor="#1B1E28"
            android:textSize="16sp"
            android:fontFamily="@font/inter_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ivImg"
            app:layout_constraintBottom_toBottomOf="@id/ivImg"
            app:layout_constraintStart_toEndOf="@id/ivImg"
            android:layout_marginStart="8dp"/>

        <ImageView
            android:id="@+id/ivMess"
            android:src="@drawable/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ivImg"
            app:layout_constraintBottom_toBottomOf="@id/ivImg"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            />
        <ImageView
            android:id="@+id/ivPhone"
            android:src="@drawable/ic_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ivImg"
            app:layout_constraintBottom_toBottomOf="@id/ivImg"
            app:layout_constraintEnd_toStartOf="@id/ivMess"
            android:layout_marginEnd="16dp"
            />

        <ImageView
            android:id="@+id/ivLocation"
            android:src="@drawable/ic_map_point"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="@id/ivImg"
            app:layout_constraintTop_toBottomOf="@id/ivImg"
            android:layout_marginTop="50dp" />
        <TextView
            android:id="@+id/tvLocation"
            android:text="Vị trí"
            android:textColor="#7D848D"
            android:fontFamily="@font/inter_regular"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ivLocation"
            app:layout_constraintStart_toEndOf="@id/ivLocation"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/tvDesLocation"
            android:text="12, Mai Dịch, Cầu Giấy"
            android:textSize="14sp"
            android:fontFamily="@font/inter_semibold"
            android:textColor="#1B1E28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvLocation"
            app:layout_constraintBottom_toBottomOf="@id/ivLocation"
            app:layout_constraintStart_toEndOf="@id/ivLocation"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/tvTime"
            android:text="10:15 AM"
            android:textColor="#7D848D"
            android:textSize="10sp"
            android:fontFamily="@font/inter_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@id/ivLocation"
            app:layout_constraintBottom_toBottomOf="@id/ivLocation"/>

        <ImageView
            android:id="@+id/ivDestination"
            android:src="@drawable/ic_round"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="@id/ivLocation"
            app:layout_constraintTop_toBottomOf="@id/ivLocation"
            android:layout_marginTop="50dp" />
        <TextView
            android:id="@+id/tvDes"
            android:text="Điểm đến"
            android:textColor="#7D848D"
            android:fontFamily="@font/inter_regular"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ivDestination"
            app:layout_constraintStart_toEndOf="@id/ivDestination"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/tvDes2"
            android:text="42, Trần Thái Tông, Cầu Giấy"
            android:textSize="14sp"
            android:fontFamily="@font/inter_semibold"
            android:textColor="#1B1E28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvDes"
            app:layout_constraintBottom_toBottomOf="@id/ivDestination"
            app:layout_constraintStart_toEndOf="@id/ivDestination"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/btnGo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="30dp"
            android:background="@drawable/custom_bg_ffa92e_round_16"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingVertical="18dp"
            android:text="Di chuyển"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivDestination"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_receipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="27dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_booking_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFA92E"
                    android:fontFamily="@font/inter_bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="Booking No: 123123"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_status"
                    android:text="Đang chờ"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_booking_number"
                    app:layout_constraintBottom_toBottomOf="@id/tv_booking_number"
                    android:layout_marginEnd="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="Nguyễn Mạnh"
                    android:textColor="#1B1E28"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_booking_number" />

                <TextView
                    android:id="@+id/tv_job"
                    android:text="Sửa chữa tủ lạnh"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="@id/tv_name"
                    app:layout_constraintBottom_toBottomOf="@id/tv_name"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="#7D848D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_booking_date"
                    android:text="Hôm nay, 08:30 - 10:30"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="12sp"
                    android:textColor="#7D848D"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="12dp"
                    android:gravity="center"
                    android:drawablePadding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@drawable/ic_calendar_choose_small" />

                <TextView
                    android:id="@+id/tv_booking_place"
                    android:text="45, Trần Thái Tông"
                    app:layout_constraintTop_toBottomOf="@id/tv_booking_date"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="12sp"
                    android:textColor="#7D848D"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@drawable/ic_map_point" />

                <TextView
                    android:id="@+id/tv_detail"
                    android:text="Chi tiết"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_booking_place"
                    android:background="@drawable/custom_bg_ffa92e"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="10sp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_see_rate"
                    android:text="Xem đánh giá"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_detail"
                    app:layout_constraintTop_toBottomOf="@id/tv_booking_place"
                    android:background="@drawable/custom_bg_stroke_ffa92e"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="10sp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:textColor="#FFA92E"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
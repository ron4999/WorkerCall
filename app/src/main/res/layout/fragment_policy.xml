<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:text="Điều khoản"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_bold"
            android:textSize="20sp"
            android:textColor="#1B1E28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_back"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_first_dot"
            android:text="\u2022"
            android:fontFamily="@font/inter_regular"
            android:textSize="16sp"
            android:textColor="#1B1E28"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_policy_content_1"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/tv_first_dot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="11dp"
            android:text="Khách hàng cần cung cấp một số thông tin riêng. Khách hàng có trách nghiệm đảm bảo các thông tin cung cấp chính xác, đầy đủ"
            android:textColor="#1B1E28"
            android:fontFamily="@font/inter_regular"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_second_dot"
            android:text="\u2022"
            android:fontFamily="@font/inter_regular"
            android:textSize="16sp"
            android:textColor="#1B1E28"
            app:layout_constraintTop_toBottomOf="@id/tv_policy_content_1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_policy_content_2"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/tv_second_dot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_policy_content_1"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="11dp"
            android:text="Trong trường hợp thợ đến nhà kiểm tra nếu không phát sinh dịch vụ hoặc khách hàng hủy lịch trong quá trình thợ di chuyển, khách hàng sẽ chi trả cho thợ 70.000 vnđ"
            android:textColor="#1B1E28"
            android:fontFamily="@font/inter_regular"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_third_dot"
            android:text="\u2022"
            android:fontFamily="@font/inter_regular"
            android:textSize="16sp"
            android:textColor="#1B1E28"
            app:layout_constraintTop_toBottomOf="@id/tv_policy_content_2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_policy_content_3"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/tv_second_dot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_policy_content_2"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="11dp"
            android:text="Tuân thủ quy định của điều khoản. Điều khoản, điều kiện của các chức năng, dịch vụ trên ứng dụng HomeTask"
            android:textColor="#1B1E28"
            android:fontFamily="@font/inter_regular"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
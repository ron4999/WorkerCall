<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bg_white">

            <TextView
                android:id="@+id/tv_title"
                android:text="Lý do hủy đơn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/inter_semibold"
                android:textSize="20sp"
                android:textColor="#1B1E28"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_reason_1"
                android:text="Tìm được thợ khác"
                android:fontFamily="@font/inter_regular"
                android:textSize="16sp"
                android:textColor="#1B1E28"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_choose" />

            <View
                android:id="@+id/view_horizontal_1"
                android:background="#F7F7F9"
                app:layout_constraintTop_toBottomOf="@id/tv_reason_1"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/tv_reason_2"
                android:text="Đặt sai địa chỉ, số điện thoại"
                android:fontFamily="@font/inter_regular"
                android:textSize="16sp"
                android:textColor="#1B1E28"
                app:layout_constraintTop_toBottomOf="@id/view_horizontal_1"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:drawableEnd="@drawable/ic_not_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/view_horizontal_2"
                android:background="#F7F7F9"
                app:layout_constraintTop_toBottomOf="@id/tv_reason_2"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/tv_reason_3"
                android:text="Mô tả nhầm tình trạng"
                android:fontFamily="@font/inter_regular"
                android:textSize="16sp"
                android:textColor="#1B1E28"
                app:layout_constraintTop_toBottomOf="@id/view_horizontal_2"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:drawableEnd="@drawable/ic_not_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/view_horizontal_3"
                android:background="#F7F7F9"
                app:layout_constraintTop_toBottomOf="@id/tv_reason_3"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/tv_reason_4"
                android:text="Thợ liên hệ chậm"
                android:fontFamily="@font/inter_regular"
                android:textSize="16sp"
                android:textColor="#1B1E28"
                app:layout_constraintTop_toBottomOf="@id/view_horizontal_3"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:drawableEnd="@drawable/ic_not_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/view_horizontal_4"
                android:background="#F7F7F9"
                app:layout_constraintTop_toBottomOf="@id/tv_reason_4"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/tv_reason_5"
                android:text="Lý do khác"
                android:fontFamily="@font/inter_regular"
                android:textSize="16sp"
                android:textColor="#1B1E28"
                app:layout_constraintTop_toBottomOf="@id/view_horizontal_4"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:drawableEnd="@drawable/ic_not_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edt_note"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_bg_social"
                android:fontFamily="@font/inter_regular"
                android:gravity="start"
                android:hint="Nhập lý do"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textColor="#494F58"
                android:textColorHint="#494F58"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tv_reason_5" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_ffa92e"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:text="Xác nhận"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/edt_note"
                app:layout_constraintEnd_toStartOf="@id/tv_cancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_social_round_8"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:paddingVertical="12dp"
                android:text="Hủy"
                android:textColor="#494F58"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/edt_note"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_confirm"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>
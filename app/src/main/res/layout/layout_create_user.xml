<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvTitle"
            android:text="Nhập mật khẩu"
            android:textColor="#1B1E28"
            android:fontFamily="@font/inter_semibold"
            android:textSize="26sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tvTitle2"
            android:text="Nhập mật khẩu để hoàn thành đăng kí"
            android:textColor="#1B1E28"
            android:fontFamily="@font/inter_regular"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/custom_bg_f7f7f9"
            android:fontFamily="@font/inter_regular"
            android:hint="Nhập mật khẩu"
            android:inputType="number"
            android:paddingHorizontal="16dp"
            android:paddingVertical="18dp"
            android:textColor="#1B1E28"
            android:textColorHint="#7D848D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle2"/>
        <EditText
            android:id="@+id/etPass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/custom_bg_f7f7f9"
            android:fontFamily="@font/inter_regular"
            android:hint="Nhập lại mật khẩu"
            android:inputType="number"
            android:paddingHorizontal="16dp"
            android:paddingVertical="18dp"
            android:textColor="#1B1E28"
            android:textColorHint="#7D848D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etPass"/>

        <TextView
            android:id="@+id/tvText"
            android:text="Mật khẩu bao gồm 6 kí tự dưới dạng số"
            android:fontFamily="@font/inter_medium"
            android:textSize="14sp"
            android:textColor="#7D848D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etPass2"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/etPass2"/>

        <TextView
            android:id="@+id/btnFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/custom_bg_cecece"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:paddingVertical="18dp"
            android:text="Hoàn tất"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
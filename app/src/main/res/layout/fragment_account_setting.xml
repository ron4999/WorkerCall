<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:text="Thiết lập tài khoản"
            android:fontFamily="@font/inter_bold"
            android:textSize="20sp"
            android:textColor="#1B1E28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_back"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_menu"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginTop="36dp"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="16dp"
            android:background="@drawable/custom_bg_white"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_noti_setting"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Cài đặt thông báo"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#1B1E28"
                    android:paddingTop="16dp"
                    android:drawableEnd="@drawable/ic_next"
                    android:drawablePadding="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    app:layout_constraintBottom_toTopOf="@id/view_horizontal_1"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/view_horizontal_1"
                    app:layout_constraintTop_toBottomOf="@id/tv_noti_setting"
                    android:background="#F7F7F9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/tv_private_setting"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_1"
                    android:text="Cài đặt riêng tư"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#1B1E28"
                    android:paddingTop="24dp"
                    android:drawableEnd="@drawable/ic_next"
                    android:drawablePadding="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    app:layout_constraintBottom_toTopOf="@id/view_horizontal_2"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/view_horizontal_2"
                    app:layout_constraintTop_toBottomOf="@id/tv_private_setting"
                    android:background="#F7F7F9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/tv_change_password"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_2"
                    android:text="Đổi mật khẩu"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#1B1E28"
                    android:paddingTop="24dp"
                    android:drawableEnd="@drawable/ic_next"
                    android:drawablePadding="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    app:layout_constraintBottom_toTopOf="@id/view_horizontal_3"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/view_horizontal_3"
                    app:layout_constraintTop_toBottomOf="@id/tv_change_password"
                    android:background="#F7F7F9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/tv_delete_account"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_3"
                    android:text="Xóa tài khoản"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#1B1E28"
                    android:paddingTop="24dp"
                    android:drawableEnd="@drawable/ic_next"
                    android:drawablePadding="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_log_out"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:layout_marginHorizontal="24dp"
            android:text="Đăng xuất"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingVertical="14dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_bg_ffa92e_round_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>